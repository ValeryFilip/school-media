---
interface PaymentPopupProps {
  id?: string;
  stepikUrl: string;
  title?: string;
  closeText?: string;
}

const {
  id = "payment-popup",
  stepikUrl,
  title = "Оплата курса",
  closeText = "Закрыть",
} = Astro.props as PaymentPopupProps;
---

<div
  id={id}
  class="payment-popup"
  data-payment-popup
  role="dialog"
  aria-modal="true"
  aria-hidden="true"
  aria-label={title}
>
  <div class="payment-popup__overlay" data-payment-close></div>

  <div class="payment-popup__container">
    <button
      type="button"
      class="payment-popup__close"
      data-payment-close
      aria-label="Закрыть окно оплаты">×</button
    >
    <div class="payment-popup__content">
      <!-- Прелоадер -->
      <div class="payment-popup__loader" id="payment-loader">
        <div class="loader-spinner"></div>
        <p class="loader-text">Загружаем страницу оплаты...</p>
      </div>

      <!-- Iframe -->
      <iframe
        src={stepikUrl}
        class="payment-popup__iframe"
        title="Оплата курса на Stepik"
        loading="lazy"
        sandbox="allow-same-origin allow-scripts allow-forms allow-popups allow-popups-to-escape-sandbox allow-top-navigation"
        allow="payment; fullscreen"
        style="display: none;"></iframe>
    </div>
  </div>
</div>

<script is:inline>
  // Функция открытия попапа — объявляем сразу, чтобы была доступна для inline onclick
  window.openPaymentPopup = function (url) {
    var popup = document.querySelector("[data-payment-popup]");
    if (!popup) return;
    var iframe = popup.querySelector(".payment-popup__iframe");
    var loader = popup.querySelector("#payment-loader");
    if (url && iframe) {
      if (loader) loader.style.display = "flex";
      iframe.style.display = "none";
      iframe.src = url;
      setTimeout(function () {
        if (loader) loader.style.display = "none";
        if (iframe) iframe.style.display = "block";
      }, 2000);
      if (window.innerWidth <= 768) {
        setTimeout(function () {
          if (loader) loader.style.display = "none";
          if (iframe) iframe.style.display = "block";
        }, 3000);
      }
    }
    popup.setAttribute("aria-hidden", "false");
    popup.style.display = "flex";
    document.body.style.overflow = "hidden";
  };

  document.addEventListener("DOMContentLoaded", function () {
    var popup = document.querySelector("[data-payment-popup]");
    var closeButtons = document.querySelectorAll("[data-payment-close]");
    var iframe = popup && popup.querySelector(".payment-popup__iframe");
    var loader = popup && popup.querySelector("#payment-loader");

    if (!popup) return;

    var closePopup = function () {
      popup.setAttribute("aria-hidden", "true");
      popup.style.display = "none";
      document.body.style.overflow = "";
      if (loader) loader.style.display = "flex";
      if (iframe) iframe.style.display = "none";
    };

    closeButtons.forEach(function (btn) {
      btn.addEventListener("click", closePopup);
    });

    popup.addEventListener("click", function (e) {
      if (e.target === popup || e.target.classList.contains("payment-popup__overlay")) {
        closePopup();
      }
    });

    document.addEventListener("keydown", function (e) {
      if (e.key === "Escape" && popup.getAttribute("aria-hidden") === "false") {
        closePopup();
      }
    });

    // Клики по кнопкам с data-payment-url (надёжнее inline onclick)
    document.body.addEventListener("click", function (e) {
      var el = e.target.closest("[data-payment-url]");
      if (el && el.getAttribute("data-payment-url")) {
        e.preventDefault();
        window.openPaymentPopup(el.getAttribute("data-payment-url"));
      }
    });
  });
</script>

<style>
  .payment-popup {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 9999;
    display: none;
    align-items: center;
    justify-content: center;
    padding: 20px;
    box-sizing: border-box;
  }

  .payment-popup__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
  }

  .payment-popup__container {
    position: relative;
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    width: 100%;
    max-width: 900px;
    max-height: 90vh;
    overflow: hidden;
  }

  .payment-popup__close {
    position: absolute;
    top: 12px;
    right: 12px;
    z-index: 20;
    width: 40px;
    height: 40px;
    border: none;
    border-radius: 50%;
    background: #f0f0f0;
    font-size: 24px;
    line-height: 1;
    cursor: pointer;
    color: #333;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .payment-popup__close:hover {
    background: #e0e0e0;
  }

  .payment-popup__content {
    width: 100%;
    height: 80vh;
    position: relative;
  }

  .payment-popup__iframe {
    width: 100%;
    height: 100%;
    border: none;
    display: block;
  }

  /* Прелоадер */
  .payment-popup__loader {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #fff;
    z-index: 10;
  }

  .loader-spinner {
    width: 50px;
    height: 50px;
    border: 4px solid #f3f3f3;
    border-top: 4px solid #ff6b35;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 20px;
  }

  .loader-text {
    font-size: 16px;
    color: #666;
    margin: 0;
    text-align: center;
  }

  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  /* Адаптивность */
  @media (max-width: 768px) {
    .payment-popup {
      padding: 5px;
    }

    .payment-popup__container {
      max-height: 98vh;
      border-radius: 12px;
    }

    .payment-popup__content {
      height: 90vh;
    }

    .payment-popup__iframe {
      min-height: 90vh;
    }

    .loader-spinner {
      width: 40px;
      height: 40px;
    }

    .loader-text {
      font-size: 14px;
    }
  }

  @media (max-width: 480px) {
    .payment-popup {
      padding: 0;
    }

    .payment-popup__container {
      border-radius: 0;
      max-height: 100vh;
      width: 100vw;
      max-width: 100vw;
    }

    .payment-popup__content {
      height: 100vh;
    }

    .payment-popup__iframe {
      min-height: 100vh;
    }

    .loader-spinner {
      width: 35px;
      height: 35px;
    }

    .loader-text {
      font-size: 13px;
    }
  }
</style>
