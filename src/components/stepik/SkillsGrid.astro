---
interface Props {
  title: string;
  rows: string[][];
}
const { title = "Чему вы научитесь на этом курсе", rows = [] } =
  Astro.props as Props;
---

<div class="content-block">
  <div class="skills" aria-label={title}>
    <h2 class="skills__h2">{title}</h2>
    {
      rows.map((r) => (
        <div class="skills__row">
          {r.map((t) => (
            <div class="skills__item">{t}</div>
          ))}
        </div>
      ))
    }
  </div>

  <style>
    .content-block {
      width: 1200px;
      max-width: 95%;
      margin: 0 auto;
      background: none;
    }

    .skills__h2 {
      font: 700 var(--h2) / 1.2 var(--ff);
      color: #fff;
      margin: 0 0 30px;
    }
    .skills__row {
      display: flex;
      gap: 20px;
      margin: 0 0 20px;
    }
    .skills__item {
      flex: 1 1 auto;
      min-width: 0;
      padding: 15px;
      font: 500 18px/1.5 var(--ff);
      color: #222;
      background: #fff;
      border-radius: 10px;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
      border: 1px solid var(--border);
    }

    @media (max-width: 1100px) {
      .skills__h2 {
        font-size: 28px;
        margin-left: var(--pad-desktop);
        margin-top: 80px;
      }
      .skills__row {
        flex-direction: column;
        gap: 14px;
      }
      .skills__item {
        margin: 0 var(--pad-desktop);
        font-size: 16px;
        line-height: 1.55;
      }
    }
    @media (max-width: 600px) {
      .skills__h2 {
        font-size: 24px;
        margin-left: var(--pad-mobile);
        margin-top: 60px;
      }
      .skills__item {
        margin: 0 var(--pad-mobile);
        line-height: 1.5;
      }
    }
  </style>
</div>
