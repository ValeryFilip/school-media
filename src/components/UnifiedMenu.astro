import { getCollection } from "astro:content";
import { slugify } from "../lib/slugify";

interface Props {
  context?: "landing" | "media";
  logoSrc?: string;
  logoAlt?: string;
  ctaText?: string;
  ctaHref?: string;
}

const {
  context = "landing",
  logoSrc = "/images/logo_media.svg",
  logoAlt = "ЕГЕХИМ",
  ctaText = "Записаться на пробный урок",
  ctaHref = "#signup",
} = Astro.props;

// Получаем категории из коллекций для медиа
let mediaCategories: Array<{ label: string; href: string }> = [];
if (context === "media") {
  try {
    const allArticles = await getCollection("articles", ({ data }) => {
      return data.visible !== false;
    });
    const categories = [
      ...new Set(allArticles.map((article) => article.data.category)),
    ];
    mediaCategories = categories.map((category) => ({
      label: category,
      href: `/media/category/${slugify(category)}`,
    }));
  } catch (error) {
    console.warn("Could not load categories:", error);
    mediaCategories = [
      {
        label: "Материалы для ЕГЭ и ОГЭ по химии",
        href: "/media/category/ege-oge",
      },
      { label: "материалы по химии", href: "/media/category/materials" },
    ];
  }
}
