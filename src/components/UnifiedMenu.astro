<script>
  // Мини-логика для off-canvas меню
  const dlg = document.getElementById("mDialog");
  const openBtn = document.getElementById("openMenu");
  const closeBtn = document.getElementById("closeMenu");

  function lockScroll(lock) {
    document.documentElement.style.overflow = lock ? "hidden" : "";
  }

  function openMenu() {
    dlg.showModal(); // открываем модально (блокирует фон кликами)
    openBtn.setAttribute("aria-expanded", "true");
    lockScroll(true);
    // фокус внутрь
    const first = dlg.querySelector("a, button");
    first && first.focus();
  }

  function closeMenu() {
    dlg.close();
    openBtn.setAttribute("aria-expanded", "false");
    lockScroll(false);
    openBtn.focus();
  }

  if (openBtn && closeBtn && dlg) {
    openBtn.addEventListener("click", openMenu);
    closeBtn.addEventListener("click", closeMenu);

    // Клик по подложке закрывает меню
    dlg.addEventListener("click", (e) => {
      if (e.target === dlg) closeMenu();
    });

    // Esc закрывает
    dlg.addEventListener("cancel", (e) => {
      e.preventDefault();
      closeMenu();
    });

    // Переход по любому пункту — закрыть меню
    dlg.querySelectorAll("a").forEach((a) => {
      a.addEventListener("click", closeMenu);
    });

    // Закрытие меню при клике на CTA кнопку (но не при открытии попапа)
    const ctaButton = dlg.querySelector(".mnav__cta-button");
    if (ctaButton) {
      ctaButton.addEventListener("click", (e) => {
        // Если это кнопка попапа, не закрываем меню сразу - попап сам закроет
        // Меню закроется при открытии попапа через popup.js
        setTimeout(() => closeMenu(), 100);
      });
    }
  }
</script>
