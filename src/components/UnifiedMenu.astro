<script>
  (function () {
    const btn = document.getElementById("menu-toggle");
    const panel = document.getElementById("mobile-menu");
    const closeBtn = document.getElementById("menu-close");
    const backdrop = document.getElementById("mobile-backdrop");

    if (!btn || !panel || !backdrop || !closeBtn) return;

    const focusableSelectors =
      'a[href], button:not([disabled]), input, select, textarea, [tabindex]:not([tabindex="-1"])';

    function openMenu() {
      panel?.removeAttribute("hidden");
      backdrop?.removeAttribute("hidden");
      panel?.classList.add("is-open");
      btn?.setAttribute("aria-expanded", "true");
      document.body.style.overflow = "hidden";

      const firstFocusable = panel?.querySelector(focusableSelectors);
      if (firstFocusable && "focus" in firstFocusable) {
        (firstFocusable as HTMLElement).focus();
      }
    }

    function closeMenu() {
      panel?.setAttribute("hidden", "");
      backdrop?.setAttribute("hidden", "");
      panel?.classList.remove("is-open");
      btn?.setAttribute("aria-expanded", "false");
      document.body.style.overflow = "";
      btn?.focus();
    }

    btn?.addEventListener("click", openMenu);
    closeBtn?.addEventListener("click", closeMenu);
    backdrop?.addEventListener("click", closeMenu);

    document.addEventListener("keydown", function (e) {
      if (e.key === "Escape" && panel && !panel.hasAttribute("hidden")) {
        closeMenu();
      }
    });

    panel?.addEventListener("keydown", function (e) {
      if (e.key === "Tab" && panel) {
        const focusableElements = panel.querySelectorAll(focusableSelectors);
        const firstElement = focusableElements[0];
        const lastElement = focusableElements[focusableElements.length - 1];

        if (e.shiftKey) {
          if (document.activeElement === firstElement) {
            e.preventDefault();
            if ("focus" in lastElement) {
              (lastElement as HTMLElement).focus();
            }
          }
        } else {
          if (document.activeElement === lastElement) {
            e.preventDefault();
            if ("focus" in firstElement) {
              (firstElement as HTMLElement).focus();
            }
          }
        }
      }
    });

    // Dropdown (desktop)
    const ddBtn = document.getElementById("dropdown-btn");
    const ddMenu = document.getElementById("dropdown-menu");
    const ddWrap = document.querySelector("[data-dropdown]");

    if (ddBtn && ddMenu && ddWrap) {
      let isOpen = false;

      function openDD() {
        isOpen = true;
        ddBtn?.setAttribute("aria-expanded", "true");
        ddBtn?.classList.add("is-open");
        ddMenu?.removeAttribute("hidden");
      }

      function closeDD() {
        isOpen = false;
        ddBtn?.setAttribute("aria-expanded", "false");
        ddBtn?.classList.remove("is-open");
        ddMenu?.setAttribute("hidden", "");
      }

      ddBtn?.addEventListener("click", (e) => {
        e.stopPropagation();
        if (isOpen) closeDD();
        else openDD();
      });

      document.addEventListener("click", (e) => {
        if (
          e.target &&
          e.target instanceof Node &&
          !ddWrap.contains(e.target)
        ) {
          closeDD();
        }
      });
    }
  })();
</script>
