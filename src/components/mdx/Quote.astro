---
/**
 * Цитата для статей
 * Использование в MDX:
 * <Quote author="Альберт Эйнштейн" role="Физик">
 *   Воображение важнее знания
 * </Quote>
 */
interface Props {
  author?: string;
  role?: string;
  image?: string; // аватар автора
}

const { author, role, image } = Astro.props;
---

<blockquote class="quote">
  <div class="quote-mark" aria-hidden="true">"</div>
  <div class="quote-content">
    <slot />
  </div>
  {
    (author || role || image) && (
      <footer class="quote-footer">
        {image && (
          <img
            class="quote-avatar"
            src={image}
            alt={author || "Автор"}
            width="48"
            height="48"
            loading="lazy"
          />
        )}
        <div class="quote-author">
          {author && <cite class="quote-name">{author}</cite>}
          {role && <span class="quote-role">{role}</span>}
        </div>
      </footer>
    )
  }
</blockquote>

<style>
  .quote {
    position: relative;
    margin: clamp(1rem, 3vw, 2rem) 0;
    padding: clamp(16px, 2vw, 24px) clamp(20px, 2.5vw, 28px)
      clamp(16px, 2vw, 24px) clamp(44px, 5vw, 60px);
    border-left: 4px solid var(--blue);
    background: linear-gradient(135deg, #f0f7ff 0%, var(--white) 100%);
    border-radius: clamp(8px, 1vw, 12px);
    box-shadow: 0 4px 12px rgba(54, 110, 240, 0.08);
  }

  .quote-mark {
    position: absolute;
    left: clamp(10px, 2vw, 20px);
    top: clamp(12px, 2vw, 20px);
    font-size: clamp(24spx, 4vw, 48px);
    font-weight: 700;
    color: var(--blue);
    opacity: 0.3;
    line-height: 1;
  }

  .quote-content {
    font-size: clamp(8px, 1.8vw, 18px);
    line-height: 1.7;
    color: var(--black);
    font-style: italic;
    margin-bottom: clamp(12px, 1.5vw, 16px);
  }

  .quote-content :global(p:first-child) {
    margin-top: 0;
  }

  .quote-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .quote-footer {
    display: flex;
    align-items: center;
    gap: clamp(8px, 1vw, 12px);
    margin-top: clamp(12px, 1.5vw, 16px);
    padding-top: clamp(12px, 1.5vw, 16px);
    border-top: 1px solid rgba(54, 110, 240, 0.15);
  }

  .quote-avatar {
    width: clamp(40px, 5vw, 48px);
    height: clamp(40px, 5vw, 48px);
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--white);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .quote-author {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .quote-name {
    font-style: normal;
    font-weight: 600;
    font-size: clamp(10px, 1.5vw, 15px);
    color: var(--black);
  }

  .quote-role {
    font-size: clamp(8px, 1.3vw, 13px);
    color: var(--gray);
  }

  @media (max-width: 600px) {
    .quote {
      padding: 16px 16px 16px 44px;
    }

    .quote-mark {
      left: 10px;
      top: 12px;
    }
    .quote-avatar {
      width: 40px;
      height: 40px;
    }
  }
</style>
