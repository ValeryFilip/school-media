---
export interface Props {
    title?: string; // можно передать заголовок с <br>
    text1?: string;
    text2?: string;
    tgHref?: string;
    waHref?: string;
    vkHref?: string;
    action?: string;
}
const {
    title = "Записывайтесь на пробное <br>бесплатное занятие по химии",
    text1 = "Любой класс, любая цель: подготовка к ЕГЭ, ОГЭ, повышение успеваемости в школе!",
    text2 = "Можно попробовать как групповое, так и индивидуальное занятие!",
    tgHref = "#",
    waHref = "#",
    vkHref = "#",
    action = "/api/lead",
} = Astro.props;
---

<section class="promo-cta" role="region" aria-labelledby="promo-cta-title">
    <div class="promo-cta__container">
        <div class="promo-cta__card">
            <div class="promo-cta__grid">
                <!-- ЛЕВАЯ ЧАСТЬ -->
                <div class="promo-cta__left">
                    <h2 id="promo-cta-title" class="promo-cta__title">
                        <span set:html={title} />
                    </h2>

                    <div class="promo-cta__text">
                        <p>{text1}</p>
                        <p>{text2}</p>
                    </div>

                    <div class="promo-cta__socials">
                        <span class="promo-cta__socials-label"
                            >Вы можете написать нам здесь:</span
                        >
                        <div
                            class="promo-cta__icons"
                            aria-label="Социальные сети"
                        >
                            <a
                                class="promo-cta__icon promo-cta__icon--tg"
                                href={tgHref}
                                aria-label="Telegram"
                            >
                                <!-- Telegram -->
                                <svg viewBox="0 0 24 24" aria-hidden="true"
                                    ><path
                                        d="M9.743 15.316 9.6 19.5c.405 0 .58-.174.787-.381l1.89-1.818 3.92 2.872c.719.397 1.234.19 1.432-.666l2.593-12.17c.232-1.081-.39-1.502-1.093-1.236L3.71 9.59c-1.047.408-1.031.996-.178 1.26l4.32 1.346 9.99-6.308c.469-.303.895-.135.543.168"
                                        fill="currentColor"></path></svg
                                >
                            </a>
                            <a
                                class="promo-cta__icon promo-cta__icon--wa"
                                href={waHref}
                                aria-label="WhatsApp"
                            >
                                <!-- WhatsApp -->
                                <svg viewBox="0 0 24 24" aria-hidden="true"
                                    ><path
                                        d="M20.52 3.48A11.94 11.94 0 0 0 12.06 0C5.45 0 .2 5.25.2 11.86c0 2.09.54 4.09 1.58 5.88L0 24l6.42-1.63a11.6 11.6 0 0 0 5.64 1.45h.01c6.61 0 11.86-5.25 11.86-11.86 0-3.18-1.24-6.17-3.41-8.38zM12.07 21.4h-.01a9.5 9.5 0 0 1-4.85-1.33l-.35-.2-3.81.97 1.02-3.71-.23-.38a9.49 9.49 0 1 1 8.22 4.65zm5.49-7.14c-.3-.15-1.78-.88-2.06-.98-.28-.1-.48-.15-.68.15-.2.3-.78.97-.96 1.17-.18.2-.35.22-.65.07-.3-.15-1.28-.47-2.44-1.5-.9-.8-1.5-1.78-1.68-2.08-.18-.3-.02-.46.13-.61.13-.13.3-.35.45-.53.15-.18.2-.3.3-.5.1-.2.05-.38-.02-.53-.07-.15-.68-1.64-.93-2.24-.24-.58-.48-.5-.68-.5h-.58c-.2 0-.53.08-.81.38-.28.3-1.07 1.05-1.07 2.56 0 1.5 1.1 2.95 1.25 3.16.15.2 2.18 3.33 5.28 4.67.74.32 1.32.5 1.77.64.74.23 1.4.2 1.93.12.59-.09 1.78-.73 2.03-1.44.25-.7.25-1.3.17-1.43-.08-.13-.28-.21-.58-.36z"
                                        fill="currentColor"></path></svg
                                >
                            </a>
                            <a
                                class="promo-cta__icon promo-cta__icon--vk"
                                href={vkHref}
                                aria-label="VK"
                            >
                                <!-- VK -->
                                <svg viewBox="0 0 24 24" aria-hidden="true"
                                    ><path
                                        d="M21.545 7.287c.134-.443 0-.768-.638-.768h-2.102c-.536 0-.783.283-.917.597 0 0-1.073 2.588-2.59 4.27-.492.49-.716.647-.984.647-.133 0-.34-.157-.34-.6V6.52c0-.53-.157-.768-.6-.768H9.21c-.34 0-.536.247-.536.48 0 .503.772.62.853 2.037v3.078c0 .673-.118.796-.374.796-.716 0-2.454-2.62-3.486-5.609-.2-.575-.41-.81-.95-.81H1.65c-.6 0-.72.283-.72.596 0 .56.716 3.336 3.336 7.003 1.744 2.508 4.205 3.865 6.448 3.865 1.344 0 1.506-.302 1.506-.81v-1.87c0-.6.124-.72.557-.72.315 0 .853.157 2.11 1.37 1.44 1.44 1.675 2.09 2.473 2.09h2.102c.6 0 .9-.302.73-.893-.19-.59-.88-1.455-1.793-2.482-.49-.576-1.23-1.2-1.451-1.51-.315-.41-.225-.59 0-.95 0 0 2.563-3.62 2.83-4.857z"
                                        fill="currentColor"></path></svg
                                >
                            </a>
                        </div>
                    </div>
                </div>

                <!-- ПРАВАЯ ЧАСТЬ (ФОРМА) -->
                <form class="promo-cta__form" action={action} method="post">
                    <label class="field">
                        <span class="field__label">ФИО*</span>
                        <input
                            class="field__input"
                            type="text"
                            name="name"
                            placeholder="Иванов Иван"
                            required
                        />
                        <small class="field__hint">Как к вам обращаться</small>
                    </label>

                    <label class="field">
                        <span class="field__label">Телефон*</span>
                        <input
                            class="field__input"
                            type="tel"
                            name="phone"
                            placeholder="+7 (___) ___-__-__"
                            inputmode="tel"
                            required
                        />
                        <small class="field__hint"
                            >Укажете номер — мы свяжемся и подтвердим запись</small
                        >
                    </label>

                    <label class="field">
                        <span class="field__label">Telegram</span>
                        <input
                            class="field__input"
                            type="text"
                            name="telegram"
                            placeholder="@username или ссылка"
                        />
                        <small class="field__hint"
                            >Например: @school_media</small
                        >
                    </label>

                    <label class="agree">
                        <input type="checkbox" name="consent" required />
                        <span
                            >согласен с <a
                                href="/privacy"
                                target="_blank"
                                rel="noopener">политикой конфиденциальности</a
                            ></span
                        >
                    </label>

                    <div class="promo-cta__actions">
                        <button type="submit" class="btn">отправить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <style>
        .promo-cta {
            margin: 0 0 50px;
            font-family:
                "Montserrat",
                system-ui,
                -apple-system,
                Segoe UI,
                Roboto,
                Helvetica,
                Arial,
                sans-serif;
        }
        .promo-cta__container {
            max-width: 1300px;
            padding: 0 50px;
            margin: 0 auto;
            box-sizing: border-box;
        }
        .promo-cta__card {
            background: #ccf2df;
            border-radius: 24px;
            padding: 30px 50px;
        }

        .promo-cta__grid {
            display: grid;
            grid-template-columns: 1.5fr 1fr;
            gap: 32px;
            align-items: start;
        }

        .promo-cta__title {
            margin: 0 0 16px;
            font-weight: 700;
            font-size: clamp(28px, 3.4vw, 40px);
            line-height: 1.15;
            color: #111;
        }
        .promo-cta__text {
            display: grid;
            gap: 12px;
            margin-bottom: 18px;
        }
        .promo-cta__text p {
            margin: 0;
            color: #222;
            font-size: 18px;
            line-height: 1.5;
            max-width: 56ch;
        }

        .promo-cta__socials {
            display: grid;
            gap: 10px;
        }
        .promo-cta__socials-label {
            color: #111;
            font-weight: 500;
            font-size: 15px;
        }
        .promo-cta__icons {
            display: flex;
            gap: 12px;
        }
        .promo-cta__icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: grid;
            place-items: center;
            color: #fff;
            text-decoration: none;
            transition: transform 0.15s ease;
        }
        .promo-cta__icon:hover {
            transform: translateY(-2px);
        }
        .promo-cta__icon svg {
            width: 22px;
            height: 22px;
        }
        .promo-cta__icon--tg {
            background: #2aabee;
        }
        .promo-cta__icon--wa {
            background: #25d366;
        }
        .promo-cta__icon--vk {
            background: #2787f5;
        }

        .promo-cta__form {
            display: grid;
            gap: 14px;
            align-content: start;
        }
        .field {
            display: grid;
            gap: 6px;
        }
        .field__label {
            font-size: 14px;
            color: #222;
        }
        .field__input {
            width: 100%;
            padding: 12px 14px;
            background: #f2f4f7;
            border: 1px solid #d0d5dd;
            border-radius: 12px;
            color: #111;
            font-size: 16px;
            outline: none;
            transition:
                border-color 0.15s ease,
                background 0.15s ease;
        }
        .field__input::placeholder {
            color: #98a2b3;
        }
        .field__input:focus {
            border-color: #0d6efd;
            background: #f7f9fc;
        }
        .field__hint {
            color: #667085;
            font-size: 12px;
        }

        .agree {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #111;
            font-size: 14px;
            margin-top: 4px;
        }
        .agree input {
            width: 16px;
            height: 16px;
        }

        .promo-cta__actions {
            display: flex;
            justify-content: center;
            padding-top: 4px;
        }
        .btn {
            appearance: none;
            padding: 12px 22px;
            border: 1px solid #222;
            color: #222;
            background: #fff;
            border-radius: 999px;
            cursor: pointer;
            font: inherit;
            transition:
                transform 0.15s ease,
                background 0.15s ease;
        }
        .btn:hover {
            transform: translateY(-1px);
            background: #fefefe;
        }

        @media (max-width: 1100px) {
            .promo-cta__grid {
                grid-template-columns: 1fr;
                gap: 24px;
            }
            .promo-cta__text p {
                max-width: 65ch;
            }
        }
        @media (max-width: 600px) {
            .promo-cta__container {
                padding: 0 20px;
            }
            .promo-cta__title {
                font-size: clamp(22px, 6vw, 28px);
            }
            .promo-cta__text p {
                font-size: 16px;
            }
            .promo-cta__icon {
                width: 36px;
                height: 36px;
            }
        }
    </style>
</section>
