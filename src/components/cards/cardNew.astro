---
import type { CollectionEntry } from "astro:content";
import { slugify } from "../../lib/slugify";
import { getCategoryHex } from "../../lib/categoryColors";

interface Props {
  post?: CollectionEntry<"articles">;

  // ручной режим (опционально)
  imageSrc?: string;
  imageAlt?: string;
  date?: string;
  readingTime?: number; // ← ЧИСЛО, не строка
  title?: string;
  text?: string;
  category?: string;
  href?: string;

  basePath?: string;
  wrapperClass?: string;
}

const {
  post,
  imageSrc: manualImageSrc,
  imageAlt: manualImageAlt,
  date: manualDate,
  readingTime: manualReadingTime,
  title: manualTitle,
  text: manualText,
  category: manualCategory,
  href: manualHref,
  basePath = "/media",
  wrapperClass,
}: Props = Astro.props;

// --- данные ---
const imageSrc =
  manualImageSrc ?? post?.data.image ?? "/images/placeholder.jpg";
const imageAlt = manualImageAlt ?? post?.data.title ?? "Card Image";
const title = manualTitle ?? post?.data.title ?? "";
const text = manualText ?? post?.data.description ?? "";
const category = manualCategory ?? post?.data.category ?? "";

// --- дата ---
let date = manualDate;
if (!date && post?.data.date) {
  const d = new Date(post.data.date);
  date = d.toLocaleDateString("ru-RU", {
    day: "2-digit",
    month: "2-digit",
    year: "numeric",
  });
}

// --- время чтения (ЧИСЛО) ---
const readingTime =
  manualReadingTime ??
  (typeof post?.data.readingTime === "number" ? post.data.readingTime : null);

// --- label для UI ---
const timeLabel = typeof readingTime === "number" ? `${readingTime} мин` : "";

// --- ссылка ---
let href = manualHref;
if (!href && post) {
  href = `${basePath}/articles/${post.slug}`;
}

// --- цвет категории ---
const categoryColor = category ? getCategoryHex(category) : "#427eff";
---

<style>
  .card__wrapper {
    border-radius: 8px;
    overflow: hidden;
    max-width: 100%;
    transition: all 0.3s ease;
    transform: none;
  }
  .card__top-img {
    padding-bottom: 16px;
    overflow: hidden;
  }

  .card__top-img img {
    max-width: 100%;
    border-radius: 12px;
    aspect-ratio: 16/10;
    object-fit: cover;
    object-position: center;
    transition: transform 0.45s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: transform;
  }

  .card__wrapper:hover .card__top-img img {
    transform: scale(1.04);
  }
  .card__body {
    padding: 0 15px 15px 15px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .card__body-title {
    font-size: clamp(18px, 2.5vw, 22px);
    margin: 0 0 10px 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .card__body-text {
    font-size: clamp(14px, 2.5vw, 16px);
    color: #666;
    margin: 0 0 15px 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .card__body-tags {
    display: flex;
    gap: 8px;
    justify-content: flex-start;
  }
  .card__body-tags-label {
    font-size: clamp(10px, 2.5vw, 12px);
    color: #666;
  }
  .card__body-tag {
    font-size: clamp(10px, 2.5vw, 12px);
    /* Цвет задается через inline style */
  }
  .card__body-tag:hover {
    text-decoration: underline;
    cursor: pointer;
  }
  .card__body-meta {
    display: flex;
    font-size: clamp(10px, 2.5vw, 12px);
    color: #666;
    margin-bottom: 10px;
    gap: 8px;
  }
  .card__body-meta-date,
  .card__body-meta-time {
    display: flex;
    align-items: center;
    gap: 5px;
  }
</style>

<article class="card123 card-vertical white-bg">
  <div class={`card__wrapper ${wrapperClass ?? ""}`.trim()}>
    <a
      href={href}
      style="text-decoration: none; color: inherit; display: contents;"
    >
      <div class="card__top-img">
        <img src={imageSrc} alt={imageAlt} loading="lazy" />
      </div>
      <div class="card__body">
        <div class="card__body-meta">
          {
            date && (
              <div class="card__body-meta-date">
                <img
                  src="/images/technical/calendar.webp"
                  alt="Date Icon"
                  width="14"
                  height="14"
                  loading="lazy"
                />
                {date}
              </div>
            )
          }
          {
            timeLabel && (
              <div class="card__body-meta-time">
                <img
                  src="/images/technical/time.webp"
                  alt="Time Icon"
                  width="14"
                  height="14"
                  loading="lazy"
                />
                {timeLabel}
              </div>
            )
          }
        </div>
        <h3 class="card__body-title">{title}</h3>
        <p class="card__body-text">{text}</p>
        {
          category && (
            <div class="card__body-tags">
              <div class="card__body-tags-label">Категория:</div>
              <a
                href={`${basePath}/category/${slugify(category)}`}
                class="card__body-tag"
                style={`color: ${categoryColor};`}
                onclick="event.stopPropagation();"
              >
                {category}
              </a>
            </div>
          )
        }
      </div>
    </a>
  </div>
</article>
