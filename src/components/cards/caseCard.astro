---
interface Props {
  // Данные карточки
  entranceScore: number; // Входные баллы
  egeScore: number; // Результат на ЕГЭ
  university: string; // Название университета
  studentName: string; // Имя студента
  studentPhoto: string; // Путь к фото студента
  telegramLink: string; // Ссылка на Telegram (например, "@bazaarsena" или "https://t.me/...")
  telegramUrl?: string; // Полный URL (если отличается от telegramLink)
  reviewText: string; // Текст отзыва студента
  footerPhoto1: string; // Путь к первой фото в футере
  footerPhoto2: string; // Путь ко второй фото в футере

  // Опциональные иконки
  playIcon?: string; // Путь к иконке стрелки (по умолчанию "play.png")
  tgIcon?: string; // Путь к иконке Telegram (по умолчанию "tg-icon.png")

  // Опциональные классы
  wrapperClass?: string; // Дополнительный класс для обёртки
}

const {
  entranceScore,
  egeScore,
  university,
  studentName,
  studentPhoto,
  telegramLink,
  telegramUrl,
  reviewText,
  footerPhoto1,
  footerPhoto2,
  wrapperClass = "",
} = Astro.props;

// Формируем URL для Telegram
const tgUrl =
  telegramUrl ||
  (telegramLink.startsWith("@")
    ? `https://t.me/${telegramLink.slice(1)}`
    : telegramLink);
---

<article class={`caseCard ${wrapperClass} white-bg`}>
  <div class="caseCard__wrapper">
    <div class="caseCard__top">
      <div class="caseCard__top-left">
        <p class="caseCard__top-text">Входные баллы</p>
        <p class="caseCard__top-number">{entranceScore}</p>
      </div>
      <div class="caseCard__top-arrow">
        <img class="triangle" src="/images/play.png" alt="arrow-right" />
        <img class="triangle" src="/images/play.png" alt="arrow-right" />
        <img class="triangle" src="/images/play.png" alt="arrow-right" />
      </div>
      <div class="caseCard__top-right">
        <p class="caseCard__top-text">Результат на ЕГЭ</p>
        <p class="caseCard__top-number">{egeScore}</p>
      </div>
    </div>
    <div class="caseCard__middle">
      <p class="caseCard__middle-uni">{university}</p>
    </div>
    <div class="caseCard__bottom">
      <div class="caseCard__bottom-photo">
        <img src={studentPhoto} alt={studentName} />
      </div>
      <div class="caseCard__bottom-info">
        <p class="caseCard__bottom-name">{studentName}</p>
        <div class="caseCard__bottom-tginfo">
          <img src="/images/technical/telegram.png" alt="tg-icon" />
          <p class="caseCard__bottom-tg">
            <a href={tgUrl} target="_blank">{telegramLink} </a>
          </p>
        </div>
        <p class="caseCard__bottom-text">{reviewText}</p>
      </div>
    </div>
    <div class="caseCard__footer">
      <div class="caseCard__footer-photo-1">
        <img src={footerPhoto1} alt="certificate" />
      </div>
      <div class="caseCard__footer-photo-2">
        <img src={footerPhoto2} alt="certificate" />
      </div>
    </div>
  </div>
</article>

<!-- Lightbox создается динамически через JavaScript -->

<style>
  .caseCard {
    container-type: inline-size;
  }
  .caseCard__wrapper {
    max-width: 100%;
    border: 1px solid var(--border);
    background-color: var(--white);
    border-radius: 8px;
    padding: var(--space-20) var(--space-20) 160px var(--space-20);
    position: relative;
  }
  .caseCard__top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-20);
  }
  .caseCard__top-left,
  .caseCard__top-right {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    text-align: center;
  }
  .caseCard__top-arrow {
    display: flex;
    align-items: center;
    gap: 2px;
  }
  .caseCard__top-number {
    font-size: clamp(32px, 4vw, 64px);
    font-weight: 500;
    border: 2px solid var(--black);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    aspect-ratio: 1;
    min-width: clamp(60px, 8vw, 100px);
    min-height: clamp(60px, 8vw, 100px);
    padding: clamp(8px, 1vw, 12px);
    margin: 0;
    line-height: 1;
  }
  .caseCard__top-text {
    margin: 0;
  }
  .caseCard__middle-uni {
    text-align: start;
    margin-bottom: 10px;
    font-size: 15px;
    font-weight: 400;
    border-bottom: 1px solid var(--black);
    padding-bottom: 4px;
  }
  .caseCard__bottom {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: var(--space-16);
  }
  .caseCard__bottom-name {
    font-size: 18px;
    font-weight: 600;
    margin: 0;
    margin-bottom: 4px;
  }
  .caseCard__bottom-tginfo {
    display: flex;
    align-items: center;
    gap: 4px;
    margin: 0;
    margin-bottom: var(--space-8);
    padding: 0;
    height: fit-content;
  }
  .caseCard__bottom-tginfo img {
    width: 16px;
    height: 16px;
  }
  .caseCard__bottom-tg {
    font-size: var(--text);
    font-weight: 400;
    color: var(--blue);
    text-decoration: none;
    margin: 0;
    padding: 0;
    line-height: 1.2;
    height: fit-content;
  }
  .caseCard__bottom-text {
    font-size: var(--text);
    font-weight: 400;
    color: var(--black);
    margin: 0 0 var(--space-20) 0;
  }

  .caseCard__bottom-photo {
    align-self: flex-start;
    flex-shrink: 0;
    width: 80px;
    height: 80px;
    border-radius: 50%;
  }
  .caseCard__bottom-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    object-position: center;
    overflow: hidden;
  }
  .caseCard__footer {
    position: absolute;
    left: var(--space-20);
    right: var(--space-20);
    bottom: -10px;
    display: flex;
    gap: -100px;
    align-items: center;
    justify-content: center;
  }
  .caseCard__footer-photo-1 {
    cursor: pointer;
    border-radius: 8px;
    overflow: hidden;
    width: 300px;
    aspect-ratio: 16 / 9;
    position: relative;
    transform: rotate(-10deg);
    transition: transform 0.3s var(--easing);
  }

  .caseCard__footer-photo-2 {
    cursor: pointer;
    border-radius: 8px;
    overflow: hidden;
    width: 300px;
    aspect-ratio: 16 / 9;
    position: relative;
    transform: rotate(10deg);
    transition: transform 0.3s var(--easing);
  }
  .caseCard__footer-photo-1:hover,
  .caseCard__footer-photo-2:hover {
    box-shadow: var(--shadow-2);
    transform: scale(1.05);
  }

  .caseCard__footer-photo-1 img,
  .caseCard__footer-photo-2 img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  .triangle {
    width: 16px;
    height: 16px;
    margin: 0 4px;
  }

  /* Оверлей (по умолчанию скрыт) - создается в body */
  :global(.caseCard-lightbox) {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    width: 100vw !important;
    height: 100vh !important;
    margin: 0 !important;
    padding: 0 !important;
    background: rgba(0, 0, 0, 0.8) !important;
    display: none !important;
    align-items: center !important;
    justify-content: center !important;
    z-index: 99999 !important;
    opacity: 0;
    transition: opacity 0.2s var(--easing);
  }

  /* когда открыт */
  :global(.caseCard-lightbox.is-open) {
    display: flex !important;
    opacity: 1 !important;
  }

  /* Картинка внутри оверлея */
  :global(.caseCard-lightbox__img) {
    max-width: 90vw !important;
    max-height: 90vh !important;
    width: auto !important;
    height: auto !important;
    object-fit: contain !important;
    border-radius: 8px !important;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5) !important;
    background: var(--black) !important;
  }

  /* Иконка закрытия */
  :global(.caseCard-lightbox__close) {
    position: absolute !important;
    top: var(--space-16) !important;
    right: var(--space-16) !important;
    font: 600 16px/1 var(--ff) !important;
    background: rgba(255, 255, 255, 0.9) !important;
    border: none !important;
    border-radius: 8px !important;
    padding: var(--space-8) var(--space-12) !important;
    cursor: pointer !important;
    z-index: 100000 !important;
  }

  @container (max-width: 350px) {
    .caseCard__wrapper {
      padding: var(--space-20) var(--space-20) 30px var(--space-20);
    }
    .caseCard__top-arrow {
      display: none;
    }
    .caseCard__bottom {
      flex-direction: column;
      align-items: start;
      text-align: start;
      gap: 5px;
    }
    .caseCard__footer {
      flex-direction: column;
      gap: var(--space-20);
      position: static;
      margin-top: var(--space-20);
    }
    .caseCard__footer-photo-1,
    .caseCard__footer-photo-2 {
      width: 100%;
      transform: rotate(0deg);
    }
  }
</style>

<script>
  // Инициализация после загрузки DOM
  document.addEventListener("DOMContentLoaded", () => {
    // Создаем или находим единый lightbox на уровне body
    let lb = document.querySelector(".caseCard-lightbox") as HTMLElement | null;
    let lbImg: HTMLImageElement | null = null;
    let lbClose: HTMLElement | null = null;

    if (!lb) {
      // Создаем lightbox, если его еще нет
      lb = document.createElement("div");
      lb.className = "caseCard-lightbox";
      lb.setAttribute("aria-hidden", "true");
      lb.innerHTML = `
        <img class="caseCard-lightbox__img" alt="" />
        <button class="caseCard-lightbox__close" type="button">Закрыть</button>
      `;
      document.body.appendChild(lb);
    }

    lbImg = lb.querySelector(
      ".caseCard-lightbox__img"
    ) as HTMLImageElement | null;
    lbClose = lb.querySelector(".caseCard-lightbox__close");

    if (!lb || !lbImg || !lbClose) return;

    function closeLightbox() {
      if (!lb || !lbImg) return;
      lb.classList.remove("is-open");
      lb.setAttribute("aria-hidden", "true");
      // Чуть позже очищаем src, чтобы не мигало при открытии другой
      setTimeout(() => {
        if (lbImg) lbImg.removeAttribute("src");
      }, 200);
    }

    // Делегируем клики от всех превью в .caseCard__footer-photo
    document.addEventListener("click", (e) => {
      if (!e.target) return;
      const target = e.target as HTMLElement;
      const img = target.closest(
        ".caseCard__footer-photo-1 img, .caseCard__footer-photo-2 img"
      ) as HTMLImageElement | null;
      if (!img || !lb || !lbImg) return;

      const full = img.dataset.full || img.src; // если есть data-full — используем её

      lbImg.src = full;
      lbImg.alt = img.alt || "";
      lb.classList.add("is-open");
      lb.setAttribute("aria-hidden", "false");
    });

    lb.addEventListener("click", (e) => {
      // клики по фону (не по картинке) — закрываем
      if (e.target === lb) closeLightbox();
    });
    lbClose.addEventListener("click", closeLightbox);

    // Закрытие по Esc
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && lb && lb.classList.contains("is-open")) {
        closeLightbox();
      }
    });
  });
</script>
