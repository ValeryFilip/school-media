---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import { slugify } from "../../lib/slugify";
import { getCategoryHex } from "../../lib/categoryColors";
import calendarIcon from "../../assets/icons/calendar.png";
import timeIcon from "../../assets/icons/time.png";

interface Props {
  // Либо передаем post из коллекции
  post?: CollectionEntry<"articles">;
  
  // Либо вручную
  imageSrc?: string;
  imageAlt?: string;
  date?: string;
  time?: string;
  tag?: string;
  category?: string;
  title?: string;
  text?: string;
  href?: string;
  
  // Базовый путь для ссылок (например /media)
  basePath?: string;
  wrapperClass?: string;
}

const {
  post,
  imageSrc: manualImageSrc,
  imageAlt: manualImageAlt,
  date: manualDate,
  time: manualTime,
  tag: manualTag,
  category: manualCategory,
  title: manualTitle,
  text: manualText,
  href: manualHref,
  basePath = "/media",
  wrapperClass,
}: Props = Astro.props;

// Извлекаем данные из post или используем ручные
const imageSrc = manualImageSrc ?? post?.data.image ?? "/images/placeholder.jpg";
const imageAlt = manualImageAlt ?? post?.data.title ?? "Card Image";
const title = manualTitle ?? post?.data.title ?? "";
const text = manualText ?? post?.data.description ?? "";
const category = manualCategory ?? post?.data.category ?? "";
const tag = manualTag ?? category; // tag = category для совместимости

// Дата
let date = manualDate;
if (!date && post?.data.date) {
  const d = new Date(post.data.date);
  date = d.toLocaleDateString("ru-RU", { day: "2-digit", month: "2-digit", year: "numeric" });
}

// Время чтения
const time = manualTime ?? post?.data.readingTime ?? "";

// Ссылка
let href = manualHref;
if (!href && post) {
  const slug = post.slug;
  href = `${basePath}/articles/${slug}`;
}

// Цвет категории (только текст, без обводки)
const categoryColor = category ? getCategoryHex(category) : "#427eff";
---

<style>
  .card__wrapper {
    border-radius: 8px;
    max-width: 600px;
    display: flex;
    flex-wrap: nowrap;
    gap: 30px;
    justify-content: start;
    transition: all 0.3s ease;
    transform: none;
    container-type: inline-size;
  }
  .card__wrapper:hover {
    transform: translateY(-5px) rotate(1deg);
  }
  .card__top-img img {
    width: 100px;
    border-radius: 12px;
    aspect-ratio: 1/1;
    object-fit: cover;
  }
  .card__body {
    padding: 0;
  }
  .card__body-title {
    font-size: clamp(18px, 2.5vw, 20px);
    margin: 0 0 10px 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .card__body-text {
    font-size: clamp(14px, 2.5vw, 16px);
    color: #666;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .card__body-tag {
    font-size: clamp(10px, 2.5vw, 12px);
    align-items: center;
    /* Цвет задается через inline style */
  }
  .card__body-tag:hover {
    text-decoration: underline;
    cursor: pointer;
  }
  .card__body-meta {
    display: flex;
    gap: 10px;
    align-items: center;
    margin-bottom: 10px;
    font-size: clamp(10px, 2.5vw, 12px);
    color: #666;
  }
  .card__body-meta-date,
  .card__body-meta-time {
    display: flex;
    align-items: center;
    gap: 5px;
  }
  @container (max-width: 400px) {
    .card__top-img {
      display: none;
    }
  }
  @container (max-width: 300px) {
    .card__top-img {
      display: none;
    }
    .card__body-text {
      display: none;
    }
    .card__body-title {
      display: -webkit-box;
    -webkit-line-clamp: none;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 0;
  }
  .card__body-tag {
    display: none;
  }
</style>

<article class="card123 card-horizontal">
  <div class={`card__wrapper ${wrapperClass ?? ""}`.trim()}>
    <a href={href} style="text-decoration: none; color: inherit; display: contents;">
      <div class="card__top-img">
        <img src={imageSrc} alt={imageAlt} loading="lazy" />
      </div>
      <div class="card__body">
        <div class="card__body-meta">
          {
            date && (
              <div class="card__body-meta-date">
                <Image
                  src={calendarIcon}
                  alt="Date Icon"
                  width={14}
                  height={14}
                  loading="lazy"
                />
                {date}
              </div>
            )
          }
          {
            time && (
              <div class="card__body-meta-time">
                <Image
                  src={timeIcon}
                  alt="Time Icon"
                  width={14}
                  height={14}
                  loading="lazy"
                />
                {time}
              </div>
            )
          }
          {
            tag && (
              <a
                href={`${basePath}/category/${slugify(tag)}`}
                class="card__body-tag"
                style={`color: ${categoryColor};`}
                onclick="event.stopPropagation();"
              >
                {tag}
              </a>
            )
          }
        </div>
        <h3 class="card__body-title">{title}</h3>
        <p class="card__body-text">{text}</p>
      </div>
    </a>
  </div>
</article>
