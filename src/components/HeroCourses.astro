---
interface Props {
  title?: string;
  highlight?: string;
  lead?: string;
  statValue?: string;
  statLabel?: string;
  chatTitle?: string;
  chatText?: string;
  accessTitle?: string;
  accessText?: string;
  flexibleTitle?: string;
  flexibleText?: string;
  rating?: string;
  ratingNote?: string;
}

const {
  title = "Качественная самостоятельная подготовка к ЕГЭ —",
  highlight = "реальность!",
  lead = "Качественная самостоятельная подготовка к ЕГЭ — реальность!",
  statValue = "2000+",
  statLabel = "Учеников",
  chatTitle = "Поддержка и общий чат",
  chatText = "Команда всегда на связи и поможет",
  accessTitle = "Доступ сразу и навсегда",
  accessText = "Получите сразу и останется навсегда",
  flexibleTitle = "Гибкий формат обучения",
  flexibleText = "Учитесь в своём темпе, в удобное время и с любого устройства",
  rating = "4.9",
  ratingNote = "средний рейтинг наших курсов",
} = Astro.props as Props;
---

<section class="hero-ege" role="region" aria-labelledby="hero-courses-title">
  <div class="hero-container">
    <div class="hero-left">
      <h1 id="hero-courses-title">{title} <span>{highlight}</span></h1>
      <p class="lead">{lead}</p>
    </div>

    <div class="hero-right">
      <div class="features">
        <div class="card card-blue-border large" data-cell="stat">
          <div class="number">{statValue}</div>
          <div class="text">
            {statLabel}<br />
            <span>готовятся к ЕГЭ по химии с нами</span>
          </div>
        </div>
        <div class="card card-blue-fill small" data-cell="chat">
          <h3>{chatTitle}</h3>
          <p>{chatText}</p>
        </div>
        <div class="card card-blue-fill small" data-cell="access">
          <h3>{accessTitle}</h3>
          <p>{accessText}</p>
        </div>
        <div class="card card-green-fill large" data-cell="flexible">
          <h3>{flexibleTitle}</h3>
          <p>{flexibleText}</p>
        </div>
      </div>

      <div class="rating" role="group" aria-label={`Рейтинг: ${rating} из 5. ${ratingNote}`}>
        <div class="rating-number">{rating}</div>
        <div class="stars" aria-hidden="true">⭐⭐⭐⭐⭐</div>
        <div class="rating-text">{ratingNote}</div>
      </div>
    </div>
  </div>
</section>

<style>
  /* локальные подстановки */
  .hero-ege {
    --gap-10: 10px;
    --muted: #a1a1a1;
    --pale: #ecf6f6;
  }

  /* Секция — без белого фона, просто внешние отступы страницы */
  .hero-ege {
    background: transparent;
    padding: 0; /* фон и паддинги перенесены внутрь .hero-container */
  }

  /* Белая «карточка» строго по центру, max-width:1200px */
  .hero-container {
    background: var(--white);
    border-radius: var(--radius-24);
    max-width: 1200px; /* ← белый блок 1200 */
    min-height: 600px; /* по ТЗ: 1200×600 */
    margin: 0 auto; /* центрирование */
    padding: var(--space-40) var(--space-40);
    display: flex;
    gap: var(--space-40);
    flex-wrap: wrap;
    align-items: flex-start;
  }

  /* Левая колонка */
  .hero-left {
    flex: 1;
    min-width: 300px;
  }
  .hero-left h1 {
    font-size: var(--h1);
    font-weight: 700;
    color: var(--black);
    margin: 0;
  }
  .hero-left h1 span {
    color: var(--blue);
  }
  .hero-left .lead {
    margin-top: 220px;
    font-size: var(--text);
    color: var(--muted);
    line-height: 1.45;
    overflow-wrap: anywhere;
  }

  /* Правая колонка: 510×(410+100) = 510×510/520 c отступами */
  .hero-right {
    flex: 0 0 510px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: var(--space-24);
  }

  /* Сетка фич: 2×2 на десктопе, 1 колонка на мобильном */
  .features {
    display: grid;
    gap: var(--gap-10);
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    grid-template-areas:
      "stat access"
      "chat flexible";
    min-height: 0;
    height: 410px;
  }
  .card[data-cell="stat"] {
    grid-area: stat;
  }
  .card[data-cell="chat"] {
    grid-area: chat;
  }
  .card[data-cell="access"] {
    grid-area: access;
  }
  .card[data-cell="flexible"] {
    grid-area: flexible;
  }
  .features .card {
    width: 100%;
    height: 100%;
    min-height: 0;
  }

  .card {
    border-radius: var(--radius-24);
    padding: var(--space-20);
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: var(--white);
    color: var(--black);
    box-shadow: none;
    border: 0;
  }
  .card.large {
    width: 250px;
    height: 250px;
  }
  .card.small {
    width: 250px;
    height: 150px;
  }

  .card-blue-border {
    border: 2px solid var(--blue);
  }
  .card-blue-fill {
    background: var(--blue);
    color: #fff;
  }
  .card-green-fill {
    background: var(--pale);
    color: var(--black);
  }

  .card h3 {
    margin: 0 0 var(--space-8);
    font-size: 24px !important;
    font-weight: 600;
    line-height: 1.2;
  }
  .card p {
    margin: 0;
    font-size: 18px;
    font-weight: 500;
    line-height: 1.35;
    overflow-wrap: anywhere;
  }

  .number {
    font-size: 54px;
    font-weight: 800;
    line-height: 1;
    margin: 0 0 var(--space-12);
    color: var(--blue);
  }
  .text {
    font-size: 24px;
    font-weight: 500;
    line-height: 1.2;
  }
  .text span {
    font-weight: 500;
  }

  /* Нижняя капсула 510×100 (на мобильном растягивается) */
  .rating {
    width: 100%;
    max-width: 510px;
    height: 100px;
    border: 2px solid var(--blue);
    border-radius: 50px;
    display: flex;
    align-items: center;
    padding: 0 var(--space-32);
    gap: var(--space-20);
    background: var(--white);
  }
  .rating-number {
    font-size: 54px;
    font-weight: 800;
    color: var(--blue);
    line-height: 1;
  }
  .stars {
    font-size: 24px;
    line-height: 100%;
  }
  .rating-text {
    font-size: var(--text);
    font-weight: 500;
    color: var(--muted);
    margin-left: auto;
  }

  /* --- фиксируем пропорции карточек, чтобы при сжатии красиво масштабировались --- */
  .card.large {
    width: 250px;
    aspect-ratio: 1 / 1; /* было: фикс. height; теперь высота считается сама */
    height: auto;
  }
  .card.small {
    width: 250px;
    aspect-ratio: 5 / 3; /* 250×150 */
    height: auto;
  }
  .features .card.large,
  .features .card.small {
    width: 100%;
    height: 100%;
    aspect-ratio: auto;
  }

  /* === DESKTOP (≥1101px): lead уезжает к низу левой колонки === */
  @media (min-width: 1101px) {
    /* растягиваем колонки по высоте, чтобы у левой был «низ», к которому можно прижаться */
    .hero-container {
      align-items: stretch;
    }

    /* делаем колонку флексом сверху-вниз и прижимаем lead к низу */
    .hero-left {
      display: flex;
      flex-direction: column;
      /* чтобы низ был соизмерим правой «сетке»; можно подстроить, если нужно */
      min-height: clamp(380px, 46vw, 520px);
    }
    .hero-left .lead {
      margin-top: auto; /* ← магия выравнивания по низу */
      color: var(
        --gray,
        #a1a1a1
      ); /* твой серый из рута (с запасным значением) */
      padding-top: var(--space-16); /* небольшой «воздух» от h1 */
    }
  }

  /* === TABLET & MOBILE (≤1100px): центрируем заголовок и lead === */
  @media (max-width: 1100px) {
    .hero-right {
      flex: 1 1 100%;
      max-width: 100%;
    }
    .hero-left {
      display: flex; /* оставляем флекс, чтобы было стабильно */
      flex-direction: column;
      align-items: center; /* центр по горизонтали */
      text-align: center; /* выравнивание текста */
      gap: var(--space-16);
    }
    .hero-left .lead {
      margin-top: 0; /* на мобильном не надо «прижатия» вниз */
      color: var(--gray, #a1a1a1);
      font-size: clamp(14px, 2.6vw, var(--text));
    }
  }
  /* === Адаптивное поведение ниже 480px === */
  @media (max-width: 600px) {
    .hero-container {
      padding: var(--space-24) var(--pad-mobile);
      gap: var(--space-24);
    }

    .hero-left,
    .hero-right,
    .features,
    .card,
    .rating {
      width: 100%;
      max-width: 100%;
      min-width: 0;
    }

    .card.large,
    .card.small {
      width: 100%;
      height: auto;
      aspect-ratio: auto;
    }

    .number {
      font-size: 32px;
    }

    .text {
      font-size: 18px;
    }

    .card h3 {
      font-size: 18px;
    }

    .card p {
      font-size: 16px;
    }

    .rating {
      height: auto;
      flex-direction: column;
      align-items: center;
      padding: var(--space-16);
      gap: var(--space-12);
    }

    .rating-number {
      font-size: 36px;
    }

    .stars {
      font-size: 18px;
    }

    .rating-text {
      font-size: 14px;
      text-align: center;
      margin-top: var(--space-8);
      margin-left: 0;
    }
  }
  @media (max-width: 600px) {
    .features {
      height: auto;
      grid-template-columns: 1fr;
      grid-template-rows: auto;
      grid-template-areas:
        "stat"
        "chat"
        "access"
        "flexible";
      gap: var(--space-16);
    }

    .features .card.large,
    .features .card.small {
      width: 100%;
      height: auto;
      aspect-ratio: auto;
      min-height: 0;
      padding: var(--space-20);
    }
  }
</style>
