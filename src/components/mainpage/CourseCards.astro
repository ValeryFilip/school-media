---
import CursCard from "../cards/cursCard.astro";
import H2Zag from "../text/h2zag.astro";

interface CourseCard {
  pins?: string[];
  title?: string;
  features?: string[];
  priceNew?: string;
  priceOld?: string;
  priceDisc?: string;
  priceNote?: string;
  buttonText?: string;
  href?: string;
}

interface Props {
  heading?: string;
  subtitle?: string;
  cards?: CourseCard[];
}

const {
  heading = "Наши курсы",
  subtitle = "Наши курсы помогут вам успешно поступить в вуз",
  cards = [],
} = Astro.props;
---

<section class="section course-cards">
  <div class="course-grid__wrapper container">
    <H2Zag title={heading} subtitle={subtitle} />
    <div class="course-cards__grid">
      {
        cards.map((card) => (
          <CursCard
            pins={card.pins}
            title={card.title}
            features={card.features}
            priceNew={card.priceNew}
            priceOld={card.priceOld}
            priceDisc={card.priceDisc}
            priceNote={card.priceNote}
            buttonText={card.buttonText}
            href={card.href}
          />
        ))
      }
    </div>
  </div>
</section>

<style>
  .course-cards__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
  }
  .section-title {
    font-size: var(--h2);
    margin: 0 0 var(--space-12, 12px);
    text-wrap: balance;
  }
</style>
