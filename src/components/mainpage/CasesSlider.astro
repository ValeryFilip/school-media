</div>

<style>
  .cases-slider-section {
    width: 100%;
    max-width: 1300px;
    margin: 0 auto;
    padding: 0px 50px;
  }

  .cases-slider__title {
    font-size: 32px;
    font-weight: 700;
    text-align: center;
    margin: 0 0 40px;
    color: #111;
  }

  .cases-slider {
    position: relative;
    width: 100%;
  }

  .cases-slider__viewport {
    overflow: hidden;
    width: 100%;
  }

  .cases-slider__wrapper {
    display: flex;
    will-change: transform;
    transition: transform 0.4s ease;
    gap: 30px;
    overflow: visible;
  }

  .cases-slider__slide {
    flex: 0 0 calc(50% - 15px);
    min-width: 0;
    overflow: visible;
  }

  .cases-slider__controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    flex-wrap: wrap;
  }

  .cases-slider__buttons {
    display: flex;
    gap: 12px;
  }

  .cases-slider__more-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 32px;
    background: var(--blue, #366ef0);
    color: #fff;
    text-decoration: none;
    font-size: 16px;
    font-weight: 600;
    border-radius: 12px;
    transition:
      transform 150ms ease-in-out,
      filter 150ms ease-in-out;
    white-space: nowrap;
  }

  .cases-slider__more-link:hover {
    transform: translateY(-1px);
    filter: brightness(1.05);
    text-decoration: none;
  }

  .cases-slider__button {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    border: 1px solid #e6e6e6;
    background: #fff;
    cursor: pointer;
    display: grid;
    place-items: center;
    transition:
      background-color 0.2s ease,
      opacity 0.2s ease,
      transform 0.2s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .cases-slider__button:hover:not(.cases-slider__button--disabled) {
    background: #f5f5f5;
    transform: scale(1.05);
  }

  .cases-slider__button--disabled {
    opacity: 0.45;
    pointer-events: none;
    cursor: not-allowed;
  }

  .cases-slider__button::after {
    content: "";
    width: 12px;
    height: 12px;
    display: block;
    border-top: 2.5px solid #222;
    border-right: 2.5px solid #222;
  }

  .cases-slider__button--next::after {
    transform: rotate(45deg);
  }

  .cases-slider__button--prev::after {
    transform: rotate(-135deg);
  }

  @media (max-width: 1100px) {
    .cases-slider-section {
      padding: 0px var(--pad-mobile, 20px) 0;
    }

    .cases-slider__title {
      font-size: 28px;
      margin-bottom: 30px;
    }

    .cases-slider__wrapper {
      gap: 20px;
    }

    .cases-slider__slide {
      flex: 0 0 calc(100% - 20px);
    }
    .cases-slider__more-link {
      padding: 12px 24px;
      font-size: 14px;
    }
  }

  @media (max-width: 600px) {
    .cases-slider-section {
      padding: 30px var(--pad-mobile, 16px) 0;
    }

    .cases-slider__title {
      font-size: 24px;
      margin-bottom: 24px;
    }

    .cases-slider__button {
      width: 40px;
      height: 40px;
    }

    .cases-slider__more-link {
      padding: 12px 20px;
      font-size: 14px;
    }
  }
</style>

<script>
  (function () {
    const container = document.getElementById("cases-slider");
    if (!container) return;

    const wrapper = container.querySelector(".cases-slider__wrapper");
    const slides = Array.from(wrapper ? wrapper.children : []) as HTMLElement[];
    const prevBtn = container.querySelector("#cases-slider-prev");
    const nextBtn = container.querySelector("#cases-slider-next");

    if (!wrapper || slides.length === 0 || !prevBtn || !nextBtn) return;

    let currentIndex = 0;
    let slidesPerView = 2;

    function updateSlidesPerView() {
      slidesPerView = window.matchMedia("(max-width: 1100px)").matches ? 1 : 2;
    }

    function getMaxIndex() {
      return Math.max(0, slides.length - slidesPerView);
    }

    function getGap() {
      // gap соответствует CSS: 30px на десктопе, 20px на мобильных
      return window.matchMedia("(max-width: 1100px)").matches ? 20 : 30;
    }

    function updateSlider() {
      const maxIndex = getMaxIndex();
      currentIndex = Math.max(0, Math.min(currentIndex, maxIndex));

      // Вычисляем смещение
      if (slides.length === 0) return;

      const slideWidth = slides[0].getBoundingClientRect().width;
      const gap = getGap();
      const translateX = -(currentIndex * (slideWidth + gap));

      (wrapper as HTMLElement).style.transform = `translateX(${translateX}px)`;

      // Обновляем состояние кнопок
      if (prevBtn && nextBtn) {
        prevBtn.classList.toggle(
          "cases-slider__button--disabled",
          currentIndex === 0
        );
        nextBtn.classList.toggle(
          "cases-slider__button--disabled",
          currentIndex >= maxIndex
        );
      }
    }

    function goToSlide(index: number) {
      const maxIndex = getMaxIndex();
      currentIndex = Math.max(0, Math.min(index, maxIndex));
      updateSlider();
    }

    function nextSlide() {
      const maxIndex = getMaxIndex();
      if (currentIndex < maxIndex) goToSlide(currentIndex + 1);
    }

    function prevSlide() {
      if (currentIndex > 0) goToSlide(currentIndex - 1);
    }

    // Обработчики кнопок
    if (nextBtn && prevBtn) {
      nextBtn.addEventListener("click", nextSlide);
      prevBtn.addEventListener("click", prevSlide);
    }

    // Обработчик изменения размера окна
    function handleResize() {
      updateSlidesPerView();
      updateSlider();
    }

    window.addEventListener("resize", handleResize);

    // Инициализация
    updateSlidesPerView();
    updateSlider();

    // Добавляем поддержку свайпа на мобильных
    if (!container) return;

    let startX = 0;
    let currentX = 0;
    let isDragging = false;

    function onPointerDown(e: Event) {
      let clientX: number;
      if (e instanceof TouchEvent && e.touches[0]) {
        clientX = e.touches[0].clientX;
      } else if (e instanceof MouseEvent) {
        clientX = e.clientX;
      } else {
        return;
      }

      startX = currentX = clientX;
      isDragging = true;
      if (container) {
        container.style.cursor = "grabbing";
      }
    }

    function onPointerMove(e: Event) {
      if (!isDragging) return;
      e.preventDefault();

      let clientX: number;
      if (e instanceof TouchEvent && e.touches[0]) {
        clientX = e.touches[0].clientX;
      } else if (e instanceof MouseEvent) {
        clientX = e.clientX;
      } else {
        return;
      }

      currentX = clientX;
    }

    function onPointerUp() {
      if (!isDragging) return;
      isDragging = false;
      if (container) {
        container.style.cursor = "";
      }

      const diff = startX - currentX;
      if (Math.abs(diff) > 50) {
        if (diff > 0) {
          // свайп влево - следующий слайд
          nextSlide();
        } else {
          // свайп вправо - предыдущий слайд
          prevSlide();
        }
      }
    }

    container.addEventListener("touchstart", onPointerDown, { passive: true });
    container.addEventListener("touchmove", onPointerMove, { passive: false });
    container.addEventListener("touchend", onPointerUp, { passive: true });
    container.addEventListener("mousedown", onPointerDown);
    container.addEventListener("mousemove", onPointerMove);
    container.addEventListener("mouseup", onPointerUp);
    container.addEventListener("mouseleave", onPointerUp);
  })();
</script>
