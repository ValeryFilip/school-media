---
import type { CollectionEntry } from "astro:content";
import { slugify } from "../lib/slugify";

export interface Props {
  post: CollectionEntry<"articles">;
  priority?: boolean;
  basePath?: string;
}
const { post, priority = false, basePath = "/media" } = Astro.props;

const title = post.data.title as string;
const category = (post.data.category as string) ?? "без категории";
const dateRaw = post.data.date as Date | string;
const image =
  (post.data.image as string) ??
  "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTi3vlT5dDAjGcfFMvv4WTu5P-go2UphNmvbQ&s";
const date = new Date(dateRaw);
const dateRu = new Intl.DateTimeFormat("ru-RU", {
  day: "2-digit",
  month: "2-digit",
  year: "numeric",
}).format(date);

const basePathClean = basePath.replace(/\/+$/, ""); // убираем хвостовой /
const postUrl = `${basePathClean}/articles/${post.slug}/`;
const catUrl = `${basePathClean}/category/${slugify(category)}/`;
---

<article class="big-card" itemscope itemtype="https://schema.org/Article">
  <img
    class="big-card__img"
    src={image}
    alt={title}
    loading={priority ? undefined : "lazy"}
    decoding="async"
    fetchpriority={priority ? "high" : undefined}
  />

  <div class="big-card__overlay">
    <h2 class="big-card__title" itemprop="headline">
      <a class="big-card__postlink" href={postUrl}>{title}</a>
    </h2>
    <div class="big-card__meta">
      <a class="big-card__category" href={catUrl} itemprop="about">{category}</a
      >
      <time
        class="big-card__date"
        datetime={date.toISOString()}
        itemprop="datePublished">{dateRu}</time
      >
    </div>
  </div>
</article>

<style>
  .big-card {
    position: relative;
    border-radius: 24px;
    overflow: hidden;
    background: #000;
    aspect-ratio: 1/1;
  }
  .big-card__img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .big-card__overlay {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 30%;
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    gap: var(--space-8);
    color: #fff;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.72),
      rgba(0, 0, 0, 0.35) 70%,
      rgba(0, 0, 0, 0)
    );
    opacity: 0;
    transition: opacity 0.2s ease;
  }
  .big-card:hover .big-card__overlay,
  .big-card:focus-within .big-card__overlay {
    opacity: 1;
  }
  @media (hover: none) {
    .big-card__overlay {
      opacity: 1;
    }
  }

  .big-card__title {
    margin: 0;
    font-weight: 700;
    font-size: 24px;
    line-height: 1.25;
  }
  .big-card__postlink {
    color: #fff;
    text-decoration: none;
  }
  .big-card__postlink:hover {
    text-decoration: underline;
  }

  .big-card__meta {
    display: flex;
    gap: var(--space-8);
    align-items: center;
    font-size: 18px;
    opacity: 0.95;
  }
  .big-card__category {
    color: #fff;
    text-decoration: none;
  }
  .big-card__category:hover {
    text-decoration: underline;
  }
  .big-card__date {
    white-space: nowrap;
    color: #fff;
  }
</style>
