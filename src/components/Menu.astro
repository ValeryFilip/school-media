    display: none;
    align-items: center;
    justify-content: center;
    width: 38px;
    height: 38px;
    border: 1px solid #d8dee4;
    border-radius: 10px;
    background: #fff;
    cursor: pointer;
  }

  .visually-hidden {
    position: absolute !important;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* ===== Лента категорий (desktop) ===== */
  .cats-wrap {
    background: transparent;
  }
  .cats-container {
    max-width: var(--page-max-width);
    padding: 8px var(--page-padding) 0;
    margin: 0 auto;
    box-sizing: border-box;
  }
