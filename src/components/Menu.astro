---
import config from "../config.ts";
import { slugify } from "../lib/slugify";
import { getCategoryHex } from "../lib/categoryColors";

interface Props {
  categories?: string[];
  logoSrc?: string;
  ctaHref?: string;
}
const { categories = [], logoSrc, ctaHref = "/courses/free" } = Astro.props;

/** Микс внутренних/внешних ссылок */
const navItems = [
  { label: "Главная", href: "/" },
  { label: "Все статьи", href: "/articles" },
  { label: "Курсы", href: "/courses" }, // не медиа
];

/** База медиа-раздела */
const MEDIA_BASE = "/media";

/** Внешняя ссылка? */
const isExternal = (href: string) => /^(https?:)?\/\//i.test(href);

/** Нормализуем href под правило: «Главная» и «Все статьи» → через /media/ */
function normalizeNavHref(href: string, label: string) {
  if (isExternal(href)) return href;
  if (label === "Главная" || href === "/") return `${MEDIA_BASE}/`;
  if (href === "/articles" || href.startsWith("/articles/"))
    return `${MEDIA_BASE}${href}`;
  return href;
}

/** Контраст для текста на цветном фоне */
function textOn(hex: string) {
  const m = /^#?([a-f\d]{2})([a-f\d]{2})([a-f\d]{2})$/i.exec(hex);
  if (!m) return "#111";
  const r = parseInt(m[1], 16),
    g = parseInt(m[2], 16),
    b = parseInt(m[3], 16);
  const lum =
    0.2126 * Math.pow(r / 255, 2.2) +
    0.7152 * Math.pow(g / 255, 2.2) +
    0.0722 * Math.pow(b / 255, 2.2);
  return lum > 0.57 ? "#111111" : "#ffffff";
}
---

<!-- Верхнее меню -->
<header class="menu-header" role="banner">
  <nav class="menu" role="navigation" aria-label="Основная навигация">
    <div class="menu-inner">
      <!-- Логотип → /media/ -->
      <a href={`${MEDIA_BASE}/`} class="logo" aria-label={config.siteName}>
        {
          logoSrc ? (
            <img
              src="./Images/logo_media.svg"
              alt=""
              width="36"
              height="36"
              loading="eager"
              decoding="async"
            />
          ) : (
            <span class="logo-text">{config.siteName}</span>
          )
        }
      </a>

      <!-- Навигация (desktop) -->
      <ul class="menu-nav" role="menubar" aria-label="Разделы сайта">
        <li class="menu-cta">
          <a
            class="btn-cta"
            href={ctaHref}
            target={isExternal(ctaHref) ? "_blank" : undefined}
            rel={isExternal(ctaHref) ? "noopener noreferrer" : undefined}
          >
            Бесплатные курсы ЕГЭ
          </a>
        </li>
        {
          navItems.map((item) => {
            const href = normalizeNavHref(item.href, item.label);
            const ext = isExternal(href);
            return (
              <li role="none">
                <a
                  role="menuitem"
                  href={href}
                  target={ext ? "_blank" : undefined}
                  rel={ext ? "noopener noreferrer" : undefined}
                >
                  {item.label}
                </a>
              </li>
            );
          })
        }
      </ul>

      <!-- Поиск (desktop) -->
      <form
        action="search"
        method="get"
        class="menu-search"
        role="search"
        aria-label="Поиск по сайту"
      >
        <label class="visually-hidden" for="q">Поиск по сайту</label>
        <input
          id="q"
          type="search"
          name="q"
          placeholder="Поиск…"
          aria-label="Поиск по сайту"
          required
        />
        <button type="submit" aria-label="Искать">
          <svg
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            aria-hidden="true"
          >
            <path
              d="M21 21l-4.3-4.3M11 18a7 7 0 1 1 0-14 7 7 0 0 1 0 14Z"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </button>
      </form>

      <!-- Бургер (mobile) -->
      <button
        id="menuToggle"
        class="menu-burger"
        aria-label="Открыть меню"
        aria-expanded="false"
        aria-controls="mobileMenu"
      >
        <svg viewBox="0 0 24 24" width="22" height="22" aria-hidden="true">
          <path
            d="M4 6h16M4 12h16M4 18h16"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"></path>
        </svg>
      </button>
    </div>
  </nav>
</header>

<!-- Полоса категорий (desktop). На мобилке скрывается — категории внутри бургера -->
{
  categories.length > 0 && (
    <div class="cats-wrap" aria-label="Категории">
      <div class="cats-container">
        <div class="cats-row" role="list">
          {categories.map((cat) => {
            const bg = getCategoryHex(cat);
            const fg = textOn(bg);
            return (
              <a
                role="listitem"
                class="cat-chip"
                href={`${MEDIA_BASE}/category/${slugify(cat)}`}
                style={`--hover-bg:${bg}; --hover-fg:${fg};`}
                aria-label={`Категория: ${cat}`}
              >
                {cat}
              </a>
            );
          })}
        </div>
      </div>
    </div>
  )
}

<!-- Мобильное меню-офканвас -->
<div id="mmenuBackdrop" class="mmenu__backdrop" hidden></div>
<aside
  id="mobileMenu"
  class="mmenu"
  role="dialog"
  aria-modal="true"
  aria-label="Мобильное меню"
  hidden
>
  <div class="mmenu__head">
    <span class="mmenu__brand">{config.siteName}</span>
    <button id="menuClose" class="mmenu__close" aria-label="Закрыть меню">
      <svg viewBox="0 0 24 24" width="22" height="22" aria-hidden="true">
        <path
          d="M6 6l12 12M18 6l-12 12"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"></path>
      </svg>
    </button>
  </div>

  <div class="mmenu__body">
    <!-- Поиск -->
    <form
      action="search"
      method="get"
      role="search"
      aria-label="Поиск по сайту"
      class="mmenu__search"
    >
      <label class="visually-hidden" for="mq">Поиск по сайту</label>
      <input
        id="mq"
        type="search"
        name="q"
        placeholder="Поиск…"
        aria-label="Поиск по сайту"
      />
      <button type="submit" aria-label="Искать">
        <svg
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          aria-hidden="true"
        >
          <path
            d="M21 21l-4.3-4.3M11 18a7 7 0 1 1 0-14 7 7 0 0 1 0 14Z"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </button>
    </form>

    <!-- Навигация -->
    <ul
      class="mmenu__nav"
      role="menubar"
      aria-label="Разделы сайта (мобильное меню)"
    >
      <li class="mmenu__cta">
        <a
          class="btn-cta"
          href={ctaHref}
          target={isExternal(ctaHref) ? "_blank" : undefined}
          rel={isExternal(ctaHref) ? "noopener noreferrer" : undefined}
        >
          Бесплатные курсы ЕГЭ
        </a>
      </li>
      {
        navItems.map((item) => {
          const href = normalizeNavHref(item.href, item.label);
          const ext = isExternal(href);
          return (
            <li role="none">
              <a
                role="menuitem"
                href={href}
                target={ext ? "_blank" : undefined}
                rel={ext ? "noopener noreferrer" : undefined}
              >
                {item.label}
              </a>
            </li>
          );
        })
      }
    </ul>

    <!-- Категории -->
    {
      categories.length > 0 && (
        <>
          <h3 class="mmenu__subhead">Категории</h3>
          <div class="mmenu__cats" role="list">
            {categories.map((cat) => {
              const bg = getCategoryHex(cat);
              const fg = textOn(bg);
              return (
                <a
                  role="listitem"
                  class="cat-chip"
                  href={`${MEDIA_BASE}/category/${slugify(cat)}`}
                  style={`--hover-bg:${bg}; --hover-fg:${fg};`}
                  aria-label={`Категория: ${cat}`}
                >
                  {cat}
                </a>
              );
            })}
          </div>
        </>
      )
    }
  </div>
</aside>

