---
/**
 * Preloader.astro - Компонент прелоадера страницы
 * 
 * Показывает спиннер при загрузке страницы и скрывает его после полной загрузки.
 * Автоматически скрывается через 5 секунд в любом случае.
 */
---

<!-- HTML разметка прелоадера -->
<div
  id="preloader"
  class="preloader"
  aria-live="polite"
  aria-busy="true"
  role="status"
>
  <div class="spinner" aria-hidden="true"></div>
</div>

<!-- Критичные стили прелоадера -->
<style>
  .preloader {
    position: fixed;
    inset: 0;
    background: rgb(241, 245, 251);
    display: grid;
    place-items: center;
    z-index: 9999;
    transition:
      opacity 0.25s ease,
      visibility 0.25s ease;
  }

  .preloader--hidden {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
  }

  .spinner {
    width: 44px;
    height: 44px;
    border: 4px solid #e6e6e6;
    border-top-color: #0d6efd;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .is-loading {
    overflow: hidden;
  }
</style>

<!-- Логика прелоадера -->
<script>
  (function () {
    const preloader = document.getElementById("preloader");
    
    const hide = () => {
      preloader?.classList.add("preloader--hidden");
      document.body.classList.remove("is-loading");
    };

    // Скрыть если страница уже загружена
    if (document.readyState === "complete") {
      hide();
    } else {
      // Скрыть после загрузки
      window.addEventListener("load", hide, { once: true });
      
      // Принудительно скрыть через 5 секунд
      setTimeout(hide, 5000);
    }

    // Скрыть при возврате через кнопку "назад" (bfcache)
    window.addEventListener("pageshow", (e) => {
      if (e.persisted) hide();
    });
  })();
</script>

