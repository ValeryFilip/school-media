---
/**
 * ExternalScripts.astro - Загрузчик внешних скриптов
 *
 * Загружает критичные внешние скрипты проекта:
 * - popup.js - управление модальными окнами
 * - leadcapture.js - обработка форм лидов и UTM меток
 *
 * Все скрипты загружаются асинхронно для оптимизации производительности.
 */

interface Props {
  loadPopup?: boolean;
  loadLeadCapture?: boolean;
  popupPath?: string;
  leadCapturePath?: string;
}

const {
  loadPopup = true,
  loadLeadCapture = true,
  popupPath = "/js/popup.js",
  leadCapturePath = "/js/leadcapture.js",
} = Astro.props;
---

<!-- 1. Popup.js - управление модальными окнами -->{
  loadPopup && <script src={popupPath} defer />
}

<!-- 2. LeadCapture.js - обработка форм и UTM меток -->
{loadLeadCapture && <script src={leadCapturePath} async />}
