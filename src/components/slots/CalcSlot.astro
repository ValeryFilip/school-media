    margin-top: 6px;
    font-size: var(--text);
    color: var(--black);
    background: #f9f9f9;
    border: 1px solid var(--border);
    border-radius: 12px;
    appearance: none;
    outline: none;
    box-sizing: border-box;
  }
  .calc-box input[type="number"]:focus {
    background: var(--white);
    border-color: var(--blue);
    box-shadow: 0 0 0 3px rgba(54, 110, 240, 0.15);
  }

  /* –∫–Ω–æ–ø–∫–∞: –±–µ—Ä—ë–º –æ–±—â–∏–π —Å—Ç–∏–ª—å .btn –∏ –ø—Ä–æ—Å—Ç–æ —Ä–∞—Å—Ç—è–≥–∏–≤–∞–µ–º */
  .calc-btn {
    width: 100%;
    margin-top: var(--space-24);
  }

  .calc-result {
    margin-top: var(--space-16);
    font-size: clamp(16px, 2.2vw, 20px);
    font-weight: 600;
    color: var(--black);
  }

  /* —Ç—É–ª—Ç–∏–ø—ã –±–µ–∑ –∏–∑–º–µ–Ω–µ–Ω–∏–π, —Ç–æ–ª—å–∫–æ –∞–∫–∫—É—Ä–∞—Ç–Ω–µ–µ —Å —Ä–∞–∑–º–µ—Ä–∞–º–∏ */
  .tooltip {
    position: relative;
    cursor: help;
    font-weight: 700;
    color: var(--gray);
    margin-left: 6px;
  }
  .tooltip .tooltip-text {
    visibility: hidden;
    opacity: 0;
    position: absolute;
    left: 0;
    bottom: 120%;
    width: 240px;
    padding: 10px;
    background: var(--black);
    color: var(--white);
    text-align: left;
    border-radius: 8px;
    transition: opacity 0.3s;
    z-index: 10;
    font-size: 13px;
    line-height: 1.35;
  }
  .tooltip:hover .tooltip-text {
    visibility: visible;
    opacity: 1;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    document.getElementById("calcButton")?.addEventListener("click", () => {
      const students = +document.getElementById("studentsInput").value || 0;
      const stepik = +document.getElementById("stepikInput").value || 0;
      const rate =
        students === 1
          ? 3000
          : students <= 5
            ? 3500
            : students <= 10
              ? 4000
              : students > 10
                ? 5000
                : 0;

      const income = students * rate + stepik * 0.15;
      document.getElementById("calcTotal").textContent = Math.round(income);
    });
  });
</script>
