    border: 1px solid var(--border);
    border-radius: var(--radius-24);
    box-shadow: var(--shadow-1);
    padding: var(--space-24);
    max-width: 520px;
    width: 100%;
    box-sizing: border-box;
  }

  .calc-box-title {
    margin: 0 0 var(--space-16);
    font-size: var(--h3);
    font-weight: 700;
    color: var(--black);
  }

  .calc-box label {
    display: block;
    margin-top: var(--space-16);
    font-weight: 600;
    font-size: 16px; /* –±–∞–∑–æ–≤—ã–π, –Ω–æ –¥–∞–ª—å—à–µ —Å–æ–∂–º—ë—Ç—Å—è —Ç–æ–∫–µ–Ω–æ–º –≤ –∏–Ω–ø—É—Ç–∞—Ö/—Ä–µ–∑—É–ª—å—Ç–∞—Ç–µ */
  }

  .calc-box input[type="number"] {
