<style>
  .header__wrapper {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    margin-bottom: 60px;
  }
  .header__wrapper p {
    margin: 0;
  }
  .header__title::after {
    content: attr(data-count);
    margin-left: 8px;
    color: #929292;
    font-weight: 700;
    font-size: 32px;
  }
  .main-cards {
    display: grid;
    grid-template-columns: 1fr 0.3fr;
    gap: 30px;
    align-items: start;
  }
  .left-block__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
  }
  .popular__title {
    font-size: 32px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
    margin-bottom: 20px;
  }

  .popular__cards {
    display: grid;
    grid-template-columns: 1fr;
    gap: 30px;
  }

  @media (max-width: 1100px) {
    .main-cards {
      grid-template-columns: 1fr;
    }
